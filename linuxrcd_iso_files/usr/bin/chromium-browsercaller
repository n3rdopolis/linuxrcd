#Calls up the chromium web browser, only not as root, but as a limited user for security. 

export DISPLAY=:0
export HOME=browser


#chrome seems to need this
chmod 777 /dev/shm

#allow any local connections to the xserver
xhost +LOCAL:



#if being passed with run, then it is probably called by itself, and can be unshared, to hide the users system from the browser
if [[ $1 == "run" ]]
then
mount --bind /srv /mnt/RecoveryMount
su browser -c " chromium-webbrowser --user-data-dir=/home/browser --first-run file:///usr/share/linuxrcd/data_files/html_files/download_notice.html"
fi

#if not passed with run, then it did not call itself with a new mount space, and it not save to bind mount the empty folder over /media
if [[ $1 != "run" ]]
then
unshare -m $0 run
fi


