#loop forever
while [ 1 ]
do
#make a file in file out
mkfifo /RCD/chroot_helper_command_socket

#
input=$(cat /RCD/chroot_helper_command_socket)

command=$(echo $input | awk -F ':' '{print $1}')
argument=$(echo $input | awk -F ':' '{print $2}')

if [[ $command == unset_pango ]]
then
gdb_unset_tree $argument &
fi


done